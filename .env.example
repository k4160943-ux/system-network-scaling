# Environment Configuration
# Copy this file to .env and populate with actual values

# Application Mode
ENV=development
DEBUG=false
LOG_LEVEL=INFO

# Network & Ingress
INGRESS_HOST=127.0.0.1
INGRESS_PORT=9000
INGRESS_BUFFER_SIZE=10000
INGRESS_BATCH_SIZE=100

# Data Storage
DATA_STORE_PATH=/data/local
DATA_RETENTION_DAYS=30

# External Data Sources (optional)
MARKET_DATA_PROVIDER=none
MARKET_DATA_API_KEY=
MARKET_DATA_ENDPOINT=

# Cloud Configuration (optional)
CLOUD_PROVIDER=none
AWS_REGION=us-east-1
AWS_S3_BUCKET=
GCP_PROJECT_ID=
GCP_BUCKET=

# Monitoring & Observability
METRICS_ENABLED=true
METRICS_PORT=8000
TRACES_ENABLED=false
TRACE_EXPORT_ENDPOINT=http://localhost:4317

# Security
TLS_ENABLED=false
TLS_CERT_PATH=
TLS_KEY_PATH=
AUTH_ENABLED=false
AUTH_TOKEN_SECRET=

# Performance Tuning
CPU_AFFINITY_ENABLED=false
CPU_CORES=
NETWORK_BATCH_WINDOW_MS=10
NETWORK_BATCH_MAX_SIZE=1000
